# http://editorconfig.org
root = true

[*]
indent_style = spaces
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{scss,styl,less}]
indent_size = 2

[{package.json,*.yml}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false
